<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f2"
    tools:context="net.villim.villim.AmenityActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="#f0f1f2"
        android:padding="10dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <Button
            android:id="@+id/close_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/btn_close" />

    </android.support.v7.widget.Toolbar>

    <!-- Title -->
    <TextView
        android:id="@+id/amenities_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="38dp"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="4sp"
        android:paddingBottom="24dp"
        android:paddingTop="27dp"
        android:text="@string/amenity"
        android:textColor="#040d14"
        android:textSize="20sp" />


    <ListView
        android:id="@+id/amenity_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/amenities_title"
        android:paddingLeft="@dimen/profile_list_item_padding_side"
        android:paddingRight="@dimen/profile_list_item_padding_side" />

</RelativeLayout>
