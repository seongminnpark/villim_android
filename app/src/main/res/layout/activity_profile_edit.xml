<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f2"
    android:orientation="vertical"
    tools:context="net.villim.villim.ProfileEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="#f0f1f2"
                android:padding="10dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">

                <Button
                    android:id="@+id/close_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/btn_close" />

            </android.support.v7.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="38dp"
                android:orientation="vertical"
                android:paddingBottom="100dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/profile_title"
                    android:textColor="#040d14"
                    android:textSize="20sp" />

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp" />

                <!-- 이름 -->
                <RelativeLayout
                    android:id="@+id/firstname_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/firstname_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="@string/firstname"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/firstname_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/firstname_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:textColor="#585757"
                        android:textSize="13sp" />

                </RelativeLayout>
                <!-- End 이름 -->

                <include layout="@layout/category_divider" />

                <!-- 성 -->
                <RelativeLayout
                    android:id="@+id/lastname_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/lastname_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="@string/lastname"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lastname_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/lastname_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:textColor="#585757"
                        android:textSize="13sp" />

                </RelativeLayout>
                <!-- End 성 -->

                <include layout="@layout/category_divider" />

                <!-- 성별 -->
                <RelativeLayout
                    android:id="@+id/sex_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/sex_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="@string/sex"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sex_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/sex_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:textColor="#585757"
                        android:textSize="13sp" />


                </RelativeLayout>
                <!-- End 성별 -->

                <include layout="@layout/category_divider" />

                <!-- 이메일 -->
                <RelativeLayout
                    android:id="@+id/email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/email_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="@string/email"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/email_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/email_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:textColor="#585757"
                        android:textSize="13sp" />

                </RelativeLayout>
                <!-- End 이메일 -->

                <include layout="@layout/category_divider" />

                <!-- 전화번호 -->
                <RelativeLayout
                    android:id="@+id/phone_number_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/phone_number_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:paddingTop="10dp"
                        android:text="@string/phone_number"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/phone_number_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/phone_number_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:textColor="#585757"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/add_phone_number_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/phone_number_content"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:text="@string/change"
                        android:textColor="@color/red_text_button"
                        android:textSize="15sp" />

                </RelativeLayout>
                <!-- End 전화번호 -->

                <include layout="@layout/category_divider" />

                <!-- 거주 도시 -->
                <RelativeLayout
                    android:id="@+id/city_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/city_title"
                        android:layout_width="@dimen/profile_edit_item_title_width"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:text="@string/city_of_residency"
                        android:textColor="#05060b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/city_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/city_title"
                        android:gravity="left|center_vertical"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:textColor="#585757"
                        android:textSize="13sp" />

                </RelativeLayout><!-- End 거주 도시 -->

            </LinearLayout>

            <Button
                android:id="@+id/bottom_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/next_button_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/next_button"
                android:text="@string/edit"
                android:textColor="@drawable/next_button_text"
                android:textSize="@dimen/next_button_text_size" />

        </RelativeLayout>

    </ScrollView>


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading_indicator"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:indicatorColor="@color/loading_animation_color"
        app:indicatorName="BallGridPulseIndicator" />

</RelativeLayout>
