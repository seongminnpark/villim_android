<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/search_highlight</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">10pt</item>

        <item name="android:color">@android:color/white</item>
    </style>

    <style name="h1"> <!-- Fragment title -->
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">10pt</item>
        <item name="android:color">@color/h2</item>
    </style>

    <style name="h3">
        <item name="android:textSize">10pt</item>
        <item name="android:color">@color/h3</item>
    </style>

    <!-- Discover Fragment -->
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">

    </style>


    <!-- Profile Fragment -->
    <style name="profile_list_item_title">
        <item name="android:textSize">8pt</item>
        <item name="android:color">@color/h3</item>
    </style>

    <style name="profile_list_item_value">
        <item name="android:textSize">6pt</item>
        <item name="android:color">@color/profile_list_item_value</item>
    </style>

</resources>
